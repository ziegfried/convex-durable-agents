{
  "name": "convex-durable-agents",
  "description": "A durable AI agents component for Convex with automatic retries, crash recovery, and tool execution.",
  "repository": "github:ziegfried/convex-durable-agents",
  "homepage": "https://github.com/ziegfried/convex-durable-agents#readme",
  "bugs": {
    "url": "https://github.com/ziegfried/convex-durable-agents/issues"
  },
  "version": "0.2.3",
  "license": "Apache-2.0",
  "keywords": [
    "convex",
    "component",
    "ai",
    "agents",
    "durable",
    "llm",
    "tools"
  ],
  "type": "module",
  "scripts": {
    "dev": "run-p -r 'dev:*'",
    "dev:backend": "convex dev --typecheck-components",
    "dev:frontend": "cd example && vite --clearScreen false --host 0.0.0.0",
    "dev:build": "chokidar 'tsconfig*.json' 'src/**/*.ts' -i '**/*.test.ts' -c 'npm run build:codegen' --initial",
    "predev": "path-exists .env.local dist || (npm run build && convex dev --once)",
    "build": "tsc --project ./tsconfig.build.json",
    "build:codegen": "npx convex codegen --component-dir ./src/component && npm run build",
    "build:clean": "rm -rf dist *.tsbuildinfo && npm run build:codegen",
    "typecheck": "tsc --noEmit && tsc -p example && tsc -p example/convex",
    "lint": "eslint .",
    "format": "biome check --write .",
    "fix": "bun lint --fix && bun format",
    "all": "run-p -r 'dev:*' 'test:watch'",
    "test": "vitest run --typecheck",
    "test:watch": "vitest --typecheck --clearScreen false",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:coverage": "vitest run --coverage --coverage.reporter=text",
    "preversion": "npm run build:clean && run-p test lint typecheck",
    "alpha": "npm version prerelease --preid alpha && npm publish --tag alpha && git push --follow-tags",
    "release": "npm version patch && npm publish && git push --follow-tags",
    "version": "vim CHANGELOG.md && git add CHANGELOG.md"
  },
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./test": "./src/test.ts",
    "./_generated/component.js": {
      "types": "./dist/component/_generated/component.d.ts"
    },
    "./_generated/component": {
      "types": "./dist/component/_generated/component.d.ts"
    },
    "./convex.config.js": {
      "types": "./dist/component/convex.config.d.ts",
      "default": "./dist/component/convex.config.js"
    },
    "./convex.config": {
      "types": "./dist/component/convex.config.d.ts",
      "default": "./dist/component/convex.config.js"
    }
  },
  "peerDependencies": {
    "ai": "^6.0.29",
    "convex": "^1.31.3",
    "react": "^18.3.1 || ^19.0.0",
    "zod": "^4.3.5"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@convex-dev/workpool": "^0.3.1",
    "@edge-runtime/vm": "^5.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "9.39.2",
    "@types/bun": "^1.3.8",
    "@types/node": "^24.10.11",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "ai": "^6.0.75",
    "chokidar-cli": "3.0.0",
    "convex": "1.31.7",
    "convex-test": "0.0.41",
    "cpy-cli": "^7.0.0",
    "eslint": "9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "npm-run-all2": "8.0.4",
    "path-exists-cli": "2.0.0",
    "pkg-pr-new": "^0.0.63",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vitest": "4.0.18",
    "zod": "^4.3.6"
  },
  "types": "./dist/client/index.d.ts",
  "module": "./dist/client/index.js"
}
